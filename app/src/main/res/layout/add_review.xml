<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Add you review"
        android:background="@drawable/btn_design"
        android:layout_margin="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:padding="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_margin="6dp"
            android:layout_height="wrap_content">

            <EditText
                android:background="@drawable/background_reviews"
                android:gravity="center"
                android:layout_height="50dp"
                android:id="@+id/add_username_id"
                android:textColor="@color/myPinko"
                android:hint="username"
                android:layout_width="match_parent"
                android:inputType="textEmailAddress"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_margin="6dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/add_user_review_id"
                android:background="@drawable/background_reviews"
                android:gravity="center"
                android:layout_height="50dp"
                android:textColor="@color/myPinko"
                android:hint="review"
                android:layout_width="match_parent"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_margin="6dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/add_rating_id"
                android:background="@drawable/background_reviews"
                android:gravity="center"
                android:layout_height="50dp"
                android:textColor="@color/myPinko"
                android:hint="rating"
                android:layout_width="match_parent"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/mySave_create_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Post"
        android:textColor="@color/myWhite"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:background="@drawable/btn_design"/>

</LinearLayout>