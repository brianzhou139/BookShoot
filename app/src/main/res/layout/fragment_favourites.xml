                                        android:rating="4">
                                    </RatingBar>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">

                                    <LinearLayout
                                        android:id="@+id/mm_details_of_book3_2"
                                        android:background="@drawable/background_read_book"
